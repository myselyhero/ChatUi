<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/multimedia_selected_background">
    <com.yongyong.chat.selected.view.MultimediaSelectedTopLayout
        android:id="@+id/multimedia_selected_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.yongyong.chat.selected.view.MultimediaSelectedRecyclerView
        android:layout_below="@id/multimedia_selected_top"
        android:layout_above="@id/multimedia_selected_bottom"
        android:id="@+id/multimedia_selected_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.yongyong.chat.selected.view.MultimediaSelectedBottomLayout
        android:id="@+id/multimedia_selected_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>