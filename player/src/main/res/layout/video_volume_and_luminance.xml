<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/video_volume_and_luminance_background">

    <ImageView
        android:id="@+id/video_volume_and_luminance_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/player_luminance"/>
    <TextView
        android:id="@+id/video_volume_and_luminance_tv"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size12"
        android:textColor="@color/white"
        android:text="0%"/>
</LinearLayout>