<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/multimedia_selected_bottom"
    android:background="@color/multimedia_selected_bottom">

    <CheckBox
        android:id="@+id/multimedia_selected_bottom_original"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/multimedia_selected_bottom_original"
        android:paddingLeft="3dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="@string/multimedia_selected_bottom_original"/>

    <LinearLayout
        android:id="@+id/multimedia_selected_bottom_preview"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:minWidth="60dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/multimedia_selected_bottom_preview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multimedia_selected_bottom_preview"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>